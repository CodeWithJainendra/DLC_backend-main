# Production Environment Configuration
# Copy this file to .env and update with your production values

# Server Configuration
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# JWT Authentication
JWT_SECRET=your-super-secure-jwt-secret-key-minimum-64-characters-long
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Database Configuration
DB_PATH=/secure/path/to/production.db
DB_BACKUP_PATH=/secure/backups/
DB_BACKUP_INTERVAL=daily

# Security Configuration
BCRYPT_SALT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCK_TIME=30
SESSION_TIMEOUT=24

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=1000
AUTH_RATE_LIMIT_MAX=5
REGISTER_RATE_LIMIT_MAX=3

# CORS Configuration
CORS_ORIGINS=https://your-domain.gov.in,https://samar.iitk.ac.in
CORS_CREDENTIALS=true

# SSL/TLS Configuration (for HTTPS)
SSL_CERT_PATH=/path/to/ssl/certificate.crt
SSL_KEY_PATH=/path/to/ssl/private.key

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=/var/log/dlc-pension/app.log
AUDIT_LOG_PATH=/var/log/dlc-pension/audit.log

# SBI API Configuration
SBI_API_URL=https://eissiwebuat.sbi.bank.in:443/gen6/gateway/thirdParty/wrapper/services
SBI_SOURCE_ID=DQ
SBI_DESTINATION=SPIGOV

# SFTP Configuration
SFTP_HOST=sfg.sbi
SFTP_PORT=2201
SFTP_USERNAME=GAD_IITKANPUR_06201
SFTP_PASSWORD=your-secure-sftp-password

# Email Configuration (for notifications)
SMTP_HOST=smtp.gov.in
SMTP_PORT=587
SMTP_USER=noreply@your-domain.gov.in
SMTP_PASS=your-email-password
FROM_EMAIL=DLC Pension System <noreply@your-domain.gov.in>

# Monitoring & Analytics
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30

# Backup Configuration
AUTO_BACKUP=true
BACKUP_RETENTION_DAYS=90
BACKUP_SCHEDULE=0 2 * * *
